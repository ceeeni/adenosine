	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>WEB-INF/Views/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	
		<bean 
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

		<property name="location">
			<value>/resources/fitbit.properties</value>
		</property>
	</bean>
	
	<bean id="constants" class="com.web.utils.Constants">
		<property name="fitbitOauthClientId" value="${fitbitOauthClientId}" />
		<property name="redirectUriFromFitbit" value="${redirectUriFromFitbit}" />
		<property name="fitbitScope" value="${fitbitScope}" />
		<property name="fitbitUriForTokens" value="${fitbitUriForTokens}" />
		<property name="sleepLogURL" value="${sleepLogURL}" />
		<property name="userProfileURL" value="${userProfileURL}" />
		<property name="heartRateURL" value="${heartRateURL}" />
		<property name="appClientIdAndSecrect" value="${appClientIdAndSecrect}" />
	</bean> 
	
	 <mvc:resources mapping="/resources/**" location="/resources/" />
	 <mvc:resources mapping="/assets/**" location="/assets/" />

    <mvc:annotation-driven />
</beans>